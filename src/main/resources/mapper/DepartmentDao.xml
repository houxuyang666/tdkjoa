<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tdkj.System.dao.DepartmentDao">

    <resultMap type="com.tdkj.System.entity.Department" id="DepartmentMap">
        <result property="deptid" column="DeptId" jdbcType="INTEGER"/>
        <result property="deptname" column="DeptName" jdbcType="VARCHAR"/>
        <result property="depthead" column="DeptHead" jdbcType="VARCHAR"/>
        <result property="deptdesc" column="DeptDesc" jdbcType="VARCHAR"/>
        <result property="corpid" column="CorpId" jdbcType="INTEGER"/>
        <result property="createdate" column="CreateDate" jdbcType="TIMESTAMP"/>
        <result property="modifydate" column="ModifyDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select
          DeptId, DeptName, DeptHead, DeptDesc, CorpId, CreateDate, ModifyDate
        from tdkjoa.department
        where DeptId = #{deptid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select
          DeptId, DeptName, DeptHead, DeptDesc, CorpId, CreateDate, ModifyDate
        from tdkjoa.department
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DepartmentMap">
        select
        DeptId, DeptName, DeptHead, DeptDesc, CorpId, CreateDate, ModifyDate
        from tdkjoa.department
        <where>
            <if test="deptid != null">
                and DeptId = #{deptid}
            </if>
            <if test="deptname != null and deptname != ''">
                and DeptName = #{deptname}
            </if>
            <if test="depthead != null and depthead != ''">
                and DeptHead = #{depthead}
            </if>
            <if test="deptdesc != null and deptdesc != ''">
                and DeptDesc = #{deptdesc}
            </if>
            <if test="corpid != null">
                and CorpId = #{corpid}
            </if>
            <if test="createdate != null">
                and CreateDate = #{createdate}
            </if>
            <if test="modifydate != null">
                and ModifyDate = #{modifydate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="deptid" useGeneratedKeys="true">
        insert into tdkjoa.department(DeptName, DeptHead, DeptDesc, CorpId, CreateDate, ModifyDate)
        values (#{deptname}, #{depthead}, #{deptdesc}, #{corpid}, #{createdate}, #{modifydate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tdkjoa.department
        <set>
            <if test="deptname != null and deptname != ''">
                DeptName = #{deptname},
            </if>
            <if test="depthead != null and depthead != ''">
                DeptHead = #{depthead},
            </if>
            <if test="deptdesc != null and deptdesc != ''">
                DeptDesc = #{deptdesc},
            </if>
            <if test="corpid != null">
                CorpId = #{corpid},
            </if>
            <if test="createdate != null">
                CreateDate = #{createdate},
            </if>
            <if test="modifydate != null">
                ModifyDate = #{modifydate},
            </if>
        </set>
        where DeptId = #{deptid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tdkjoa.department where DeptId = #{deptid}
    </delete>

</mapper>